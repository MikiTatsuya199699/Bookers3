<div class="container">
<div class="row" style="margin-top: 55px">
<div class="top-message col-md-offset-0 col-md-10">


<div class="col-xs-3">
<h2>User info</h2>
 <table class="table">
  <tbody>
    <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %></th>
    </tr>
    <tr>
     <th>name</th><th><%= @user.name %></th>
    </tr>
    <tr>
     <th>introduction</th><th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th>フォロー数：<%= link_to "#{@user.follower.count}",relationships_show_path %></th>
    </tr>
    <tr>
      <th>フォロワー数：<%= link_to "#{@user.followed.count}",relationships_show_path %></th>
    </tr>
 </tbody>
</table>

<%= link_to"",edit_user_path(@user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

<h2>New book</h2>
  <%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book', class:"btn btn-primary" %>
<% end %>
</div>



<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <p>error</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<div class="col-xs-9">
<h2>Books</h2>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

<% @books.each do |book| %>
<tbody>
  <tr>
    <%= link_to(book.user) do %>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60'%></td>
    <% end %>
      <td><%= link_to "#{book.title}", book_path(book) %></td>
      <td><%= book.body %></td>
  </tr>
</tbody>
<% end %>
</table>
</div>

</div>
</div>
</div>
